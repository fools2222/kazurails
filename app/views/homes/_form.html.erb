

<%= form_for @inquiry do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お客様のお名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :message, 'お問い合わせ内容' %>
    <%= f.text_area :message, class: 'form-control' %>
  </div>
    
  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>