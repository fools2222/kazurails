
<div class="row">
    <div class="col-md-12">
        <h2><%= @question.title %></h2>
        <div>
            名前:<%= @question.name %>
        </div>
        <div>
            コメント:<%= @question.content %>
        </div>
        
    </div>
</div>
    <hr>
    <div>
    <h3>返事</h3>
    <table class="table table-striped">
        <%if @question.answers.any? %>
        <thead class="thead thead-light">
            <tr>
                <td>コメント</td>
                <td>名前</td>
                <td>menu</td>
            </tr>
        </thead>
        <tbody>
            <%@question.answers.each do |p| %>
            <tr>
                <td><%= p.content %></td>
                <td><%= p.name %></td>
                <td>[<%= link_to "変更",edit_question_answer_path(@question,p) %>][<%= link_to "消す",question_answer_path(@question,p),method: :delete %>]</td>
            </tr>
            <%end %>
        </tbody>
        <%else %>
        <p>コメントなし</p>

        <%end %>
    </table>
    
    </div>

    <h3>新しくコメントする</h3>
    <%= form_with model:[ @question,@answer],local: true do |p| %>
    <%= p.hidden_field :question_id,{value:@question.id} %>
        <div class="form-group">
            <label>名前</label>
            <%= p.text_field :name,class:"form-control" %>
        </div>
        <div class="form-group"> 
        <label>コメント</label>
        <%= p.text_area :content,class:"form-control" %>
        </div>
        <div class="text-center">
            <%= p.submit "コメントを送る",class:"btn btn-primary" %>
        </div>
    <%end %>
    <div class="btn btn-light">
        <%= link_to "戻る",root_path %>
    </div>

