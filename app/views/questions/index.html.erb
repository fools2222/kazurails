<h2>KAZUTTER</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-info">
            <thead class="thead-light"> 
                <th>題名</th>
                <th>menu</th>
            </thead>
            <tbody>
            <%@questions.each do |question| %>
                <tr>
                    <td><%= link_to question.title,question_path(question) %></td>
                    <td>[<%= link_to "変更",edit_question_path(question)%>][<%= link_to "消す",question_path(question),method: :delete,data:{confirm: "まじでけす？"} %>]</td> 
                </tr>
            <%end %>
            </tbody>
        </table>
        <div>
            <%= link_to "新しくつくる",new_question_path %>
        </div>
    </div>

</div>