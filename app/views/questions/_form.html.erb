<%= form_with model:@question,local:true do |p| %>
            <div class="form-group">
            <label>name</label>
            <%= p.text_field :name,class:"form-control" %>
            </div>
            <div class="form-group">
            <label>title</label>
            <%= p.text_field :title,class:"form-control" %>
            </div>
            <div class="form-group">
            <label>content</label>
            <%= p.text_field :content,class:"form-control" %>
            </div>
            <div class="text-center">
            <%= p.submit "送信",class:"btn btn-info" %>
            </div>

        <%end %>